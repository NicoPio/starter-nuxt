{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "types": ["vitest/globals", "@vue/test-utils", "node"],
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"],
      "~~/*": ["./*"],
      "@@/*": ["./*"]
    }
  },
  "include": [
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
